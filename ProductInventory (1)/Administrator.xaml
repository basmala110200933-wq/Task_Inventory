<Window x:Class="ProductInventory.Administrator"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Administrator Panel" Height="600" Width="900" WindowStartupLocation="CenterScreen"
        Background="#FFEFFBFB">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Label Content="Administrator Panel" 
               FontSize="24" FontWeight="Bold" 
               Foreground="DarkBlue" 
               FontFamily="Comic Sans MS" 
               HorizontalAlignment="Center"/>

        <!-- Buttons -->
        <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Center" Margin="0,10,0,10">
            <Button Content="Add Product" Name="btnAddProduct" Width="140" Height="35" Margin="5"
                    Background="#FF57D8D8" FontWeight="Bold" Click="btnAddProduct_Click"/>
            <Button Content="Edit Product" Name="btnEditProduct" Width="140" Height="35" Margin="5"
                    Background="#FF7884E6" FontWeight="Bold" Click="btnEditProduct_Click"/>
            <Button Content="Delete Product" Name="btnDeleteProduct" Width="140" Height="35" Margin="5"
                    Background="LightCoral" FontWeight="Bold" Click="btnDeleteProduct_Click"/>
            <Button Content="Manage Suppliers" Name="btnSupplier" Width="160" Height="35" Margin="5"
                    Background="LightGreen" FontWeight="Bold" Click="btnSupplier_Click"/>
        </StackPanel>

        <!-- DataGrid -->
        <DataGrid Name="dgProducts" Grid.Row="2" Margin="10"
                  AutoGenerateColumns="False" BorderBrush="CadetBlue" BorderThickness="2"
                  FontFamily="Comic Sans MS" FontSize="14">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Product ID" Binding="{Binding ProductID}" Width="80"/>
                <DataGridTextColumn Header="Name" Binding="{Binding PName}" Width="150"/>
                <DataGridTextColumn Header="Description" Binding="{Binding PDescription}" Width="200"/>
                <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity}" Width="100"/>
                <DataGridTextColumn Header="Price" Binding="{Binding Price}" Width="100"/>
                <DataGridTextColumn Header="Supplier" Binding="{Binding supplier.SName}" Width="150"/>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
