<Window x:Class="ProductInventory.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProductInventory"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid Width="350">
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Border Grid.ColumnSpan="2" Grid.RowSpan="4" Height="323" BorderBrush="CadetBlue" BorderThickness="4"/>
        <Label Content="Welcome" FontSize="23" Width="120" Height="50" FontFamily="Comic Sans MS" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="115,63,0,0" Grid.ColumnSpan="2" Grid.RowSpan="2"></Label>
        <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Width="340" Height="100" Margin="5,0,5,0">
            <Label Content="UserName " Grid.Row="1" Width="130" Height="40" FontFamily="Comic Sans MS" VerticalAlignment="Top" HorizontalAlignment="Left" FontSize="19"></Label>
            <TextBox Name="txtboxuser" Height="40" BorderBrush="Black" BorderThickness="2"></TextBox>
        </StackPanel>
        <StackPanel Grid.Row="2" Grid.ColumnSpan="2" Width="340" Height="100" Margin="5,0,5,0">
            <Label Content="Password " Grid.Row="1" Width="130" Height="40" FontFamily="Comic Sans MS" VerticalAlignment="Top" HorizontalAlignment="Left" FontSize="19"></Label>
            <PasswordBox Name="txtboxpass" Height="40" BorderBrush="Black" BorderThickness="2"></PasswordBox>
            <TextBlock Name="myTextBlock" Height="30"></TextBlock>
        </StackPanel>
        <Button Content="Login" FontFamily="Comic Sans MS" FontSize="22" Grid.ColumnSpan="2" Width="140" Height="40" Grid.Row="3" Background="CadetBlue" Click="Button_Click" Margin="105,2,105,66"></Button>
    </Grid>
</Window>
