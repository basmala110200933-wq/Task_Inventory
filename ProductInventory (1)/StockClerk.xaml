<Window x:Class="ProductInventory.StockClerk"    
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProductInventory"
        mc:Ignorable="d"
        Title="StockClerk" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Button Grid.Row="0" Content="Logout" Width="100" Background="Red" FontSize="18"
                FontWeight="Bold" FontFamily="Comic Sans MS" VerticalAlignment="Top"
                HorizontalAlignment="Right" Margin="10" Click="Button_Click"/>

        <GroupBox Header="In Stock (Qty ≥ 10)" Grid.Row="1" Margin="10" FontWeight="Bold" FontFamily="Comic Sans MS">
            <DataGrid x:Name="dgInStock" AutoGenerateColumns="False" BorderBrush="CadetBlue" BorderThickness="2">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Product ID" Binding="{Binding ProductID}" Width="100"/>
                    <DataGridTextColumn Header="Description" Binding="{Binding PDescription}" Width="200"/>
                    <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity}" Width="100"/>
                    <DataGridTextColumn Header="Price" Binding="{Binding Price}" Width="100"/>
                    <DataGridTextColumn Header="Supplier Name" Binding="{Binding _supplier.SName}" Width="150"/>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>

        <GroupBox Header="Low Stock (Qty  10)" Grid.Row="2" Margin="10" FontWeight="Bold" FontFamily="Comic Sans MS" Foreground="Red">
            <DataGrid x:Name="dgLowStock" AutoGenerateColumns="False" BorderBrush="CadetBlue" BorderThickness="2">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Product ID" Binding="{Binding ProductID}" Width="100"/>
                    <DataGridTextColumn Header="Description" Binding="{Binding PDescription}" Width="200"/>
                    <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity}" Width="100"/>
                    <DataGridTextColumn Header="Price" Binding="{Binding Price}" Width="100"/>
                    <DataGridTextColumn Header="Supplier Name" Binding="{Binding Supplier.SName}" Width="150"/>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>

        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button Content="Receive Stock" Width="150" Height="40" Margin="10"
                    Background="#FF57D8D8" FontWeight="Bold" FontFamily="Comic Sans MS" FontSize="19" Click="ReceiveStock_Click"/>
            <Button Content="Ship Stock" Width="150" Height="40" Margin="10"
                    Background="#FF7884E6" FontWeight="Bold" FontFamily="Comic Sans MS" FontSize="19" Click="ShipStock_Click"/>
        </StackPanel>
    </Grid>
</Window>
